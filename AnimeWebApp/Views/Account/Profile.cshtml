@model Models.ProfileViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <title></title>
</head>
<body>

<p class="h1 text-center">Profile data</p>
<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <form asp-action="Profile" asp-controller="Account">
                <div class="row" style="margin: 20px 0">
                    Пол : <input class="form-control" style="margin: 5px 10px" type="text" placeholder="sex" asp-for="Sex"/>
                </div>
                <div class="row" style="margin: 20px 0">
                    Город : <input class="form-control" style="margin: 5px 10px" type="text" placeholder="city" asp-for="City"/>
                </div>
                <div class="row input-group" style="margin: 20px 0">
                    Описание : <textarea class="form-control" style="margin: 5px 10px" type="text" placeholder="desc" asp-for="Description"></textarea>
                </div>
                <div class="row">
                    <button type="submit">Change</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>